{
    "name": "wemake180/bagisto-wompi",
    "description": "Wompi Payment Gateway integration for Bagisto E-commerce - Support for Colombia payments",
    "type": "bagisto-package",
    "keywords": [
        "bagisto",
        "payment",
        "wompi",
        "colombia",
        "pse",
        "nequi",
        "e-commerce",
        "laravel",
        "gateway"
    ],
    "homepage": "https://github.com/Wemake180-dev/bagisto-wompi",
    "license": "MIT",
    "authors": [
        {
            "name": "Wemake180 Dev",
            "email": "dev@wemake180.com"
        }
    ],
    "support": {
        "issues": "https://github.com/Wemake180-dev/bagisto-wompi/issues",
        "source": "https://github.com/Wemake180-dev/bagisto-wompi"
    },
    "require": {
        "php": "^8.2|^8.3",
        "ext-curl": "*",
        "ext-json": "*",
        "bagisto/bagisto": "^2.3",
        "laravel/framework": "^11.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Webkul\\Wompi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Webkul\\Wompi\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Webkul\\Wompi\\Providers\\WompiServiceProvider",
                "Webkul\\Wompi\\Providers\\ModuleServiceProvider"
            ]
        },
        "bagisto": {
            "module": true,
            "version": "2.x",
            "display_name": "Wompi Payment Gateway"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
